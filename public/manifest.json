{
  "manifest_version": 3,
  "name": "Cockpit",
  "version": "0.1.0",
  "description": "Gemini web helper",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
